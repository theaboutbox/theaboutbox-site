!!!
%html
  %head
    %meta{:http_equiv => "Content-Type", :content => "text/html; charset=UTF-8"}
    %title
      = "The Aboutbox, Inc - #{@item[:title]}"
    %script{ :src => relative_path_to('/scripts/jquery-1.4.2.min.js') }
    %link{ :href => relative_path_to("/stylesheets/styles.css"), :rel => "stylesheet", :type => "text/css", :media => "screen" }
    %link{ :href => relative_path_to("/stylesheets/coderay.css"), :rel => "stylesheet", :type => "text/css", :media => "screen" }
    %link{ :href => relative_path_to("/feed/"), :type => "application/atom+xml", :rel => "alternate", :title => "The Aboutbox Blog Feed"}

  %body
    .container
      .header
        %img{:src => '/images/aboutbox_logo.png'}
        %ul.nav
          %li 
            %a{:href =>'/'} Home
          %li 
            %a{:href => '/contact/'} Contact
          %li 
            %a{:href => '/blog/'} Blog
      .content
        ~ yield
      .footer
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-15062747-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
